{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend for Company Registration & Verification Module",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "NODE_ENV=test jest --runInBand --detectOpenHandles --testTimeout=10000",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "test:auth": "NODE_ENV=test jest src/tests/auth.test.js",
    "test:company": "NODE_ENV=test jest src/tests/company.test.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "migrate": "node-pg-migrate up",
    "migrate:create": "node-pg-migrate create",
    "migrate:down": "node-pg-migrate down",
    "db:create": "createdb company_db",
    "db:drop": "dropdb company_db",
    "db:reset": "npm run db:drop && npm run db:create && psql -U backend_user -d company_db -f company_db.sql",
    "seed": "node src/seeds/seed.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "keywords": [
    "node",
    "express",
    "postgresql",
    "firebase",
    "jwt"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cloudinary": "^1.41.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "firebase": "^12.6.0",
    "firebase-admin": "^11.11.0",
    "helmet": "^7.0.0",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.1",
    "libphonenumber-js": "^1.10.42",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-pg-migrate": "^6.2.2",
    "nodemailer": "^6.10.1",
    "pg": "^8.11.0",
    "sanitize-html": "^2.10.0",
    "uuid": "^9.0.0",
    "winston": "^3.10.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}
